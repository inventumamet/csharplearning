{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/test/DebuggingExample.Tests/DebuggingExample.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/test/DebuggingExample.Tests/DebuggingExample.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/test/DebuggingExample.Tests/DebuggingExample.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package",
            "command": "sam",
            "type": "shell",
            "args": [
                "package",
                "--template-file=${workspaceFolder}/src/DebuggingExample/serverless.template",
                "--output-template-file=${workspaceFolder}/src/DebuggingExample/debugging-serverless.template",
                "--s3-bucket=verdisandboxbucket",
                "--profile=sandbox",
                 "--region=ap-southeast-2"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
            // "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy",
            "command": "sam",
            "type": "shell",
            "args": [
                "deploy",
                "--template-file=${workspaceFolder}/src/DebuggingExample/debugging-serverless.template",
                "--stack-name=DebugginExampleStack",
                "--profile=sandbox",
                "--region=ap-southeast-2",
                "--capabilities=CAPABILITY_IAM"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
            // "problemMatcher": "$msCompile"
        },
        {
            "label": "cleanupCloud",
            "command": "aws",
            "type": "shell",
            "args": [
                "cloudformation",
                "delete-stack",
                "--stack-name=DebugginExampleStack",
                "--profile=sandbox",
                "--region=ap-southeast-2",
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
            // "problemMatcher": "$msCompile"
        },
    ]
}